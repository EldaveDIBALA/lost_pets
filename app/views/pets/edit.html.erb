<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Edit <%= @pet.name %></h2>
      <%= simple_form_for @pet do |f| %>
        <div class="card">
          <div class="card-body">
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :species, collection: Pet::SPECIES, label: 'Species' %>
            <%= f.input :found_on %>
            <div class="text-center">
              <%= link_to "Go Back", root_path, class: "btn btn-secondary" %>
              <%= f.button :submit, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center">
  </div>
</div>
